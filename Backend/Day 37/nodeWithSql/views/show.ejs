<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users data</title>
    <style>
        th,
        tr,
        td {
            border: 1px solid black;
        }

        button {
            font-size: 1rem;
            background-color: rgb(106, 224, 177);
        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>id</td>
            <th>username</td>
            <th>email</td>
        </tr>
        <% for (const user of users ) { %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <form action="/user/<%= user.id%>/edit">
                        <button>Edit Username</button>
                    </form>
                    <br>
                    <form action="/user/<%= user.id%>/delete">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </table>
    <form action="/user/new">
    <button>Add new User</button>
  </form>
</body>

</html>